
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Candidate {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String
}

model Employer {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String
}